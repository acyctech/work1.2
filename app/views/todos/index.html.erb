<p id="notice"><%= notice %></p>

<h1>Todos</h1>

<table>
  <thead>
    <tr>
      <th>Who</th>
      <th>What</th>
      <th>When</th>
      <th>Where</th>
      <th>How</th>
      <th>Why</th>
      <th>Result</th>
      <th>Flag</th>
      <th colspan="3">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.who %></td>
        <td><%= todo.what %></td>
        <td><%= todo.when %></td>
        <td><%= todo.where %></td>
        <td><%= todo.how %></td>
        <td><%= todo.why %></td>
        <td><%= todo.result %></td>
        <td><%= todo.flag %></td>
        <td><%= link_to 'Show', todo %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

